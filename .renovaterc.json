{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "description": "Update Go directives in go.mod files",
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "matchDepTypes": ["golang"],
      "rangeStrategy": "bump"
    },
    {
      "description": "Group golangci-lint packages",
      "matchPackageNames": [
        "golangci/golangci-lint",
        "golangci/golangci-lint-action",
        "radiofrance/lint-config"
      ],
      "groupName": "golangci-lint",
      "groupSlug": "golangci-lint",
      "separateMinorPatch": false,
      "separateMajorMinor": false
    }
  ],
  "postUpdateOptions": [
    "gomodUpdateImportPaths",
    "gomodTidy"
  ],
  "customManagers": [
    {
      "description": "Update *_VERSION variables in Makefiles (https://docs.renovatebot.com/presets-customManagers/#custommanagersmakefileversions)",
      "customType": "regex",
      "fileMatch": ["(^|/)Makefile$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>[a-zA-Z0-9-._]+?) depName=(?<depName>[^\\s]+?)(?: versioning=(?<versioning>[^\\s]+?))?\\s+[A-Za-z0-9_]+?_VERSION\\s*:*\\??=\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    },
    {
      "description": "Update variables in GitHub Actions files",
      "customType": "regex",
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>[a-zA-Z0-9-._]+?) depName=(?<depName>[^\\s]+?)(?: versioning=(?<versioning>[^\\s]+?))?\\s+[A-Za-z0-9-]+?\\s*:\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    }
  ]
}
